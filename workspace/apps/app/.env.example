# Optional AdSense client (enables footer ads when set)
ADSENSE_CLIENT=ca-pub-XXXXXXXXXXXXXXXX

# Google Site Verification for AdSense (meta tag method)
GOOGLE_SITE_VERIFICATION=

# Base URL used in password reset links (default falls back to request origin)
APP_BASE_URL=http://localhost:5173

# Optional SMTP settings for password reset emails (otherwise links are logged)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=
SMTP_FROM=no-reply@example.com

# Optional Google OAuth (not wired by default yet)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=

# Sentry configuration for error tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
