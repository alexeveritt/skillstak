{
  "name": "skillstak",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "dev:wrangler": "npm run build && wrangler pages dev ./build/client --compatibility-date=2024-11-11 --live-reload",
    "build": "react-router build",
    "start": "react-router start",
    "cf:pages": "wrangler pages dev --compatibility-date=2024-11-11 ./build/client",
    "d1:apply": "wrangler d1 execute SKILLSTAK_DB --file=./db/schema.sql",
    "d1:apply:local": "wrangler d1 execute SKILLSTAK_DB --local --file=./db/schema.sql",
    "d1:export-local": "node scripts/export-local-db.js",
    "d1:delete-local": "rm -rf .wrangler/state/",
    "d1:reset-local": "npm run d1:delete-local && npm run d1:apply:local",

    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "ci": "biome ci .",
    "kill-port": "node ./scripts/kill-port.cjs 8788"
   },
  "dependencies": {
    "@react-router/cloudflare": "^7.0.0",
    "@react-router/dev": "^7.0.0",
    "@react-router/serve": "^7.0.0",
    "clsx": "^2.1.1",
    "isbot": "^5.1.31",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.9.4",
    "ulidx": "^2.3.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.6",
    "@cloudflare/workers-types": "^4.20251011.0",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "wrangler": "^4.43.0"
  }
}
